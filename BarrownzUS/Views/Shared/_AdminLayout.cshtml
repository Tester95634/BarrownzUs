<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/litepicker/dist/css/litepicker.css" rel="stylesheet" />
    <link href="~/Content/Admin_assets/css/Style.css" rel="stylesheet" />
    <!--DataTable cdn-->
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />

    <script data-search-pseudo-elements defer src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/js/all.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.29.0/feather.min.js" crossorigin="anonymous"></script>
    <!--Sweet alert-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!--Animated input css-->
    <link rel="stylesheet" href="~/Content/Admin_assets/css/Image_style.css" />
    <!--CkEditor btn-->
    <script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
</head>
<body>
    <nav class="topnav navbar navbar-expand shadow justify-content-between justify-content-sm-start navbar-light bg-white" id="sidenavAccordion">
        <!-- Sidenav Toggle Button-->
        <button class="btn btn-icon btn-transparent-dark order-1 order-lg-0 me-2 ms-lg-2 me-lg-0" id="sidebarToggle"><i data-feather="menu"></i></button>
        <!-- Navbar Brand-->
        <!-- * * Tip * * You can use text or an image for your navbar brand.-->
        <!-- * * * * * * When using an image, we recommend the SVG format.-->
        <!-- * * * * * * Dimensions: Maximum height: 32px, maximum width: 240px-->
        <a class="navbar-brand pe-3 ps-4 ps-lg-2" href="#">
            <img src="~/Content/logo/Logos-07 5.png" />
        </a>
       
        <!-- Navbar Items-->
        <ul class="navbar-nav align-items-center ms-auto">
         
            <!-- Navbar Search Dropdown-->
         <!-- User Dropdown-->
            <li class="nav-item dropdown no-caret dropdown-user me-3 me-lg-4">
                <a class="btn btn-icon btn-transparent-dark dropdown-toggle" id="navbarDropdownUserImage" href="javascript:void(0);" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img class="img-fluid" src="~/Content/Admin_assets/Image/Avatar.png" /></a>
                <div class="dropdown-menu dropdown-menu-end border-0 shadow animated--fade-in-up" aria-labelledby="navbarDropdownUserImage">
                    <h6 class="dropdown-header d-flex align-items-center">
                        <img class="dropdown-user-img" src="~/Content/Admin_assets/Image/Avatar.png" />
                        <div class="dropdown-user-details">
                            <div class="dropdown-user-details-name">@Session["Username"]</div>
                            <div class="dropdown-user-details-email">@Session["Email"]</div>
                        </div>
                    </h6>
                    <div class="dropdown-divider"></div>
                        <form action="Logout" >
                            <button class="dropdown-item">
                                <div class="dropdown-item-icon"><i data-feather="log-out"></i></div>
                                Logout
                            </button>
                        </form>
                    
                </div>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sidenav shadow-right sidenav-light">
                <div class="sidenav-menu">
                    <div class="nav accordion" id="accordionSidenav">
                        <!-- Sidenav Menu Heading (Account)-->
                        <!-- * * Note: * * Visible only on and above the sm breakpoint-->
                        <div class="sidenav-menu-heading d-sm-none">Account</div>
                        <!-- Sidenav Link (Alerts)-->
                        <!-- * * Note: * * Visible only on and above the sm breakpoint-->
                        <a class="nav-link d-sm-none" href="#!">
                            <div class="nav-link-icon"><i data-feather="bell"></i></div>
                            Alerts
                            <span class="badge bg-warning-soft text-warning ms-auto">4 New!</span>
                        </a>
                        <!-- Sidenav Link (Messages)-->
                        <!-- * * Note: * * Visible only on and above the sm breakpoint-->
                        <a class="nav-link d-sm-none" href="#!">
                            <div class="nav-link-icon"><i data-feather="mail"></i></div>
                            Messages
                            <span class="badge bg-success-soft text-success ms-auto">2 New!</span>
                        </a>
                        <!-- Sidenav Menu Heading (Core)-->
                        <div class="sidenav-menu-heading">Core</div>
                        <!-- Sidenav Accordion (Dashboard)-->

                        <a class="nav-link collapsed" id="dashboard" href="@Url.Action("Dashboard","Admin")">
                            <div class="nav-link-icon"><i data-feather="activity"></i></div>
                            Dashboard

                        </a>

                        <!-- Sidenav Heading (Custom)-->
                        <div class="sidenav-menu-heading">Blog Operation's</div>
                        <!-- Sidenav Accordion (Pages)-->
                        <a class="nav-link collapsed" id="blog" href="javascript:void(0);" data-bs-toggle="collapse" data-bs-target="#collapsePages" aria-expanded="false" aria-controls="collapsePages">
                            <div class="nav-link-icon"><i data-feather="grid"></i></div>
                            Blog
                            <div class="sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapsePages" data-bs-parent="#accordionSidenav">
                            <nav class="sidenav-menu-nested nav accordion" id="accordionSidenavPagesMenu">
                                <!-- Nested Sidenav Accordion (Pages -> Account)-->
                                <a class="nav-link" href="@Url.Action("AddBlogCategory","Admin")">
                                    Add Category
                                </a>
                                <a class="nav-link" href="@Url.Action("AddBlog","Admin")">
                                    Add Blog
                                </a>
                                <a class="nav-link" href="@Url.Action("BlogList","Admin")">
                                    Blog List
                                </a>

                            </nav>
                        </div>

                        <!-- Sidenav Heading (UI Toolkit)-->
                        <div class="sidenav-menu-heading">Enquiry Data</div>
                        <!-- Sidenav Accordion (Layout)-->
                        <a class="nav-link collapsed" id="User" href="javascript:void(0);" data-bs-toggle="collapse" data-bs-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                            <div class="nav-link-icon"><i data-feather="layout"></i></div>
                            Enquiry Details
                            <div class="sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseLayouts" data-bs-parent="#accordionSidenav">
                            <nav class="sidenav-menu-nested nav accordion" id="accordionSidenavLayout">
                                <!-- Nested Sidenav Accordion (Layout -> Navigation)-->
                                <a class="nav-link" href="@Url.Action("UserList","Admin")">
                                    Total Enquiry
                                </a>

                            </nav>
                        </div>

                    </div>
                </div>
                <!-- Sidenav Footer-->
                <div class="sidenav-footer">
                    <div class="sidenav-footer-content">
                        <div class="sidenav-footer-subtitle">Logged in as:</div>
                        <div class="sidenav-footer-title">@Session["Username"]</div>
                    </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-xl px-4 mt-5">
                    @RenderBody()
                </div>

            </main>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="~/Content/Admin_assets/js/scripts.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js" crossorigin="anonymous"></script>
        <script src="~/Content/Admin_assets/assets/demo/chart-area-demo.js"></script>
        <script src="~/Content/Admin_assets/assets/demo/chart-bar-demo.js"></script>
        <script src="~/Content/Admin_assets/assets/demo/chart-pie-demo.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/litepicker/dist/bundle.js" crossorigin="anonymous"></script>
        <script src="~/Content/Admin_assets/js/litepicker.js"></script>

        <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
        <script src="~/Content/Admin_assets/js/datatables/datatables-simple-demo.js"></script>
        <script src="~/Content/Admin_assets/js/Custom.js"></script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const currentPath = window.location.pathname.toLowerCase();

                // Dashboard
                const dashboardLink = document.getElementById("dashboard");
                if (currentPath.endsWith("/admin/dashboard")) {
                    dashboardLink.classList.remove("collapsed");
                    dashboardLink.classList.add("active");
                }

                // Blog Section
                const blogLink = document.getElementById("blog");
                const blogCollapse = document.getElementById("collapsePages");
                if (
                    currentPath.endsWith("/admin/addblog") ||
                    currentPath.endsWith("/admin/addblogcategory") ||
                    currentPath.endsWith("/admin/bloglist")
                ) {
                    blogLink.classList.remove("collapsed");
                    blogLink.classList.add("active");
                    blogCollapse.classList.add("show");

                    // Activate specific blog submenu link
                    highlightExactSubLink("/admin/addblogcategory", "AddBlogCategory");
                    highlightExactSubLink("/admin/addblog", "AddBlog");
                    highlightExactSubLink("/admin/bloglist", "BlogList");
                }

                // Enquiry Section
                const enquiryLink = document.getElementById("User");
                const enquiryCollapse = document.getElementById("collapseLayouts");
                if (currentPath.endsWith("/admin/userlist")) {
                    enquiryLink.classList.remove("collapsed");
                    enquiryLink.classList.add("active");
                    enquiryCollapse.classList.add("show");
                    highlightExactSubLink("/admin/userlist", "UserList");
                }

                // Highlight function using exact match
                function highlightExactSubLink(path, actionId) {
                    if (currentPath.endsWith(path.toLowerCase())) {
                        const links = document.querySelectorAll(".sidenav-menu a.nav-link");
                        links.forEach(link => {
                            if (link.href.toLowerCase().endsWith(path)) {
                                link.classList.add("active");
                            }
                        });
                    }
                }
            });
        </script>


</body>
</html>
