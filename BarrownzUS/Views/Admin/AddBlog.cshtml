
@{
    ViewBag.Title = "AddBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="container">
        <div class="border p-5">
            <h2>Add blog details</h2>
            <form action="AddBlog" method="post">
                <div class="row py-2">
                    <div class="col-lg-12">
                        <!-- From Uiverse.io by akshat-patel28 -->
                        <div class="input-div">
                            
                            <input class="input" name="file" type="file">
                            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" stroke-linejoin="round" stroke-linecap="round" viewBox="0 0 24 24" stroke-width="2" fill="none" stroke="currentColor" class="icon"><polyline points="16 16 12 12 8 16"></polyline><line y2="21" x2="12" y1="12" x1="12"></line><path d="M20.39 18.39A5 5 0 0 0 18 9h-1.26A8 8 0 1 0 3 16.3"></path><polyline points="16 16 12 12 8 16"></polyline></svg>
                        </div>
                    </div>
                </div>
                <div class="row py-2">
                    <div class="col-lg-6">
                     <div class="form-label">Blog Title</div>
                        <input type="text" class="form-control" placeholder="Blog Title" />
                    </div>
                    <div class="col-lg-6">
                        <div class="form-label">Meta Title</div>
                     <input class="form-control" placeholder="Meta Title" />
                    </div>
                </div>

                <div class="row py-2">
                    <div class="col-lg-12">
                        <div class="form-label">Meta Description</div>
                        <textarea class="form-control" placeholder="Meta Description"></textarea>
                    </div>
                </div>
                <div class="row py-2">
                    <div class="col-lg-6">
                        <div class="form-label">Slug</div>
                        <input type="text" class="form-control" placeholder="Slug" name="slug" />
                    </div>
                    <div class="col-lg-6">
                        <div class="form-label">Category</div>
                      <select class="form-control">
                          <option>Select Category</option>
                          <option>1</option>
                      </select>
                    </div>
                </div>
                <div class="row py-2">
                    <div class="col-lg-12">
                        <div class="form-label">Blog Description</div>
                        <textarea type="text" placeholder="Blog Description" name="BlogDescription" class="form-control "></textarea>
                    </div>
                </div>
                <button class="btn btn-primary mt-3" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>




