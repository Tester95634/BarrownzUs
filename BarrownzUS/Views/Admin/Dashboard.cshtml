
@{
    ViewBag.Title = "Dashbaord";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<div class="container-fluid">
    
    <div class="row">
        <div class="col-xl-4 col-md-6 mb-4">
            <!-- Dashboard info widget 1-->
            <div class="card border-start-lg border-start-primary h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">

                        <div class="flex-grow-1">
                            <div class="small fw-bold text-success mb-1 fs-3">Total Enquiry</div>
                            <div class="text-xs fw-bold text-success d-inline-flex align-items-center gap-2">
                                <i class="fa-solid fa-users-line fs-4"></i>
                                <span class="fs-5">  @TempData["User"]</span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-md-6 mb-4">
            <!-- Dashboard info widget 2-->
            <div class="card border-start-lg border-start-secondary h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="small fw-bold text-secondary mb-1 fs-3">Total Blog</div>
                            <div class="text-xs fw-bold text-danger d-inline-flex align-items-center gap-2">
                                <i class="fa-solid fa-blog fs-4"></i>
                                <span class="fs-5">@TempData["blog"]</span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-md-6 mb-4">
            <!-- Dashboard info widget 3-->
            <div class="card border-start-lg border-start-success h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="small fw-bold text-success mb-1 fs-3">Total Category</div>

                            <div class="text-xs fw-bold text-success d-inline-flex align-items-center gap-2">
                                <i class="fa-solid fa-layer-group fs-4"></i>
                                <span class="fs-5"> @TempData["Category"]</span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="text-center py-5">
    <h1 class="fw-bold" style="font-size:2.5rem">@TempData["Greeting"], hope you're <br /> having a great day!</h1>
</div>
<script>
   @if (TempData["Msg"] != null)
   {
       <text>
           Swal.fire({
               icon: 'success',
               title: 'Success',
               text: '@TempData["Msg"]',
               timer: 2000,
               showConfirmButton: false
           });
       </text>
   }

</script>


