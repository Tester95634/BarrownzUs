
@{
    ViewBag.Title = "Contact us | Barrownz group";
    ViewBag.MetaDescription = "Let's Connect for All Your Digital Needs! Contact us today for expert services in SEO, Website Design & Development, Graphic Design, PPC, Affiliate Marketing, and social media marketing.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero_sction_contact container-fluid  py-3">
    <div class="container position-relative mt-4">
        <div class="row">
            <div class="col-lg-12 d-flex justify-content-center flex-column">
                <h1 class=" border-primary">Get in touch with us today!</h1><br />
                <p class="lh-5">
                You can use our digital services by simply filling out the form below. It’s quick and easy.
                Once you send us your details, our team will contact you soon to guide you and help you start using our services without any trouble.
                </p>
            </div>
           
        </div>
      
    </div>
</div>

<div class="container-fluid py-4" >
    <div class="container">
        <div class="row border border-primary p-5 formss" style="border-radius:5px;">

            <div class="col-lg-6 col-md-6">
                <div class="form_container">
                    <form action="@Url.Action("SaveData", "Home")" method="post">
                        @*@Html.AntiForgeryToken()*@
                        <div class="name_email_holer d-flex gap-5">
                            <div class="mb-3">
                                <div class="form-label fw-bold">Name<sup class="text-primary">*</sup></div>
                                <input type="text" class="form-control" name="Name" />
                            </div>
                            <div class="mb-3">
                                <div class="form-label fw-bold">Email<sup class="text-primary">*</sup></div>
                                <input type="email" class="form-control" name="Email" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-label fw-bold">Number<sup class="text-primary">*</sup></div>
                            <input type="number" class="form-control" name="PhoneNumber" />
                        </div>
                        <div class="mb-3">
                            <div class="form-label fw-bold">Select a service<sup class="text-primary">*</sup></div>
                            <select class="form-control" name="Service">
                                <option>Select A Service</option>
                                <option>Design & Development</option>
                                <option>Search Engin Optimization</option>
                                <option>Digital marketing</option>
                                <option>Graphic Design</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <div class="form-label fw-bold">Message<sup class="text-primary">*</sup></div>
                            <textarea class="form-control" placeholder="Message" name="Message"></textarea>
                        </div>

                        <button class="btn btn-primary rounded" type="submit">Send Massage</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 d-flex  align-items-center justify-content-center flex-column gap-2 photo_section">

                <div class="img_holder d-flex align-items-center justify-content-center">
                    <img src="~/Content/img/contact-11.png" class="img-fluid image_ss" />
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    @if (TempData["Msg"] != null)
     {
          <text>
      Swal.fire({
          icon: 'success',
          title: 'Success',
          text: '@TempData["Msg"]',
          timer: 2000,
          showConfirmButton: false
      });
     </text>
     }

     @if (TempData["Error"] != null)
     {
      <text>
        Swal.fire({
            icon: 'error',
            title: 'Login Failed',
            text: '@TempData["error"]',
            timer: 2000,
            showConfirmButton: false
        });
      </text>
      }
</script>



