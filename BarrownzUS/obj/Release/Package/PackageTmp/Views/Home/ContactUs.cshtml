
@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero_sction_contact container-fluid  py-3">
    <div class="container position-relative">
        <div class="row">
            <div class="col-lg-12 d-flex justify-content-center flex-column">
                <h1 class=" border-primary">Contact Us</h1><br />
                <p class="lh-5">
                    Already have contacts and permission to text them? Great. If not, our SMS service  has you covered with all the tools you need to collect phone numbers. From website popups to text-to-join keywords, it's easy  to build your SMS list.
                </p>
            </div>
           
        </div>
      
    </div>
</div>

<div class="container-fluid py-5" >
    <div class="container">
        <div class="row border border-primary p-5 formss" style="border-radius:5px;">

            <div class="col-lg-6 col-md-6">
                <div class="form_container">
                    <form>
                        <div class="name_email_holer d-flex gap-5">
                            <div class="mb-3">
                                <div class="form-label fw-bold">Name<sup class="text-primary">*</sup></div>
                                <input type="text" class="form-control" name="name" />
                            </div>
                            <div class="mb-3">
                                <div class="form-label fw-bold">Email<sup class="text-primary">*</sup></div>
                                <input type="email" class="form-control" name="email" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-label fw-bold">Number<sup class="text-primary">*</sup></div>
                            <input type="number" class="form-control" name="number" />
                        </div>
                        <div class="mb-3">
                            <div class="form-label fw-bold">Select a service<sup class="text-primary">*</sup></div>
                            <select class="form-control">
                                <option>Select A Service</option>
                                <option>Design & Development</option>
                                <option>Search Engin Optimization</option>
                                <option>Digital marketing</option>
                                <option>Graphic Design</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <div class="form-label fw-bold">Message<sup class="text-primary">*</sup></div>
                            <textarea class="form-control" placeholder="Message"></textarea>
                        </div>

                        <button class="btn btn-primary rounded">Send Massage</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 d-flex  align-items-center justify-content-center flex-column gap-2 photo_section">

                <div class="img_holder d-flex align-items-center justify-content-center">
                    <img src="~/Content/img/contact-11.png" class="img-fluid image_ss" />
                </div>
            </div>
        </div>
    </div>
</div>



